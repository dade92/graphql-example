type Book {
    id: ID!
    title: String!
    description: String!
    author: Author!
    assets: [Asset!]!
}

type Asset {
    type: String!
    url: String!
}

extend type Query {
    getBookById(id: ID!): Book
    getBookByTitle(title: String!): Book
    getBooksByAuthor(authorId: ID!): [Book!]!
}

extend type Mutation {
    createBook(title: String!, description: String!, authorName: String!): Book
}

